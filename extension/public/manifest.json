{
  "manifest_version": 3,
  "name": "Message Preparer",
  "version": "1.0",

  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "clipboardWrite",
    "webRequest"
  ],
  "host_permissions": ["https://*.facebook.com/*"],

  "background": {
    "service_worker": "./background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://*.facebook.com/*"],
      "js": ["./content.js", "ui/static/js/main.0c7e3433.js"],
      "css": ["ui/static/css/main.72bb179c.css"],
      "run_at": "document_end"
    }
  ],

  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "logo192.png",
      "48": "logo192.png",
      "128": "logo192.png"
    }
  },

  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "ui/static/js/main.0c7e3433.js",
        "ui/static/css/main.72bb179c.css"
      ],
      "matches": ["https://*.facebook.com/*"]
    }
  ]
}
